<h2>New Tweet!</h2>
<!-- <form action="/tweets" method="POST"> -->
<form class="tweet-compose" data-tweets-ul="#feed">
  <input
      type="hidden"
      name="authenticity_token"
      value="<%= form_authenticity_token %>">

  <label>
    Content
    <textarea name="tweet[content]"></textarea>
  </label>
  <strong class="chars-left"></strong>
  <br>

  <label>
    <a class="add-mentioned-user" href="javascript:void(0)">Add mention</a>
    <div class="mentioned-users"></div>
    <script type="text/template">
      <div class="select-form">
        <a class="remove-mentioned-user" href="javascript:void(0)">Remove mention</a>
        Mention
        <select name="tweet[mentioned_user_ids][]">
          <option></option>
          <% User.all.each do |user| %>
            <option value="<%= user.id %>"><%= user.username %></option>
          <% end %>
        </select>
      </div>
    </script>
  </label>
  <br>

  <button>Post Tweet!</button>
</form>
